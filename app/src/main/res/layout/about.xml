<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:fiam="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/about_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/about"
        fiam:layout_constraintBottom_toTopOf="@+id/about_textview"
        fiam:layout_constraintEnd_toEndOf="parent"
        fiam:layout_constraintStart_toStartOf="parent"
        fiam:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:fontFamily="@font/biryani_light"
        android:text="@string/made_by"
        fiam:layout_constraintBottom_toTopOf="@+id/imageView2"
        fiam:layout_constraintEnd_toEndOf="parent"
        fiam:layout_constraintStart_toStartOf="parent"
        fiam:layout_constraintTop_toBottomOf="@+id/about_text" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="136dp"
        android:src="@drawable/codechakra"
        fiam:layout_constraintBottom_toTopOf="@+id/textView4"
        fiam:layout_constraintEnd_toEndOf="parent"
        fiam:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/code_chakra_studio"
        fiam:layout_constraintEnd_toEndOf="parent"
        fiam:layout_constraintStart_toStartOf="parent"
        fiam:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>
