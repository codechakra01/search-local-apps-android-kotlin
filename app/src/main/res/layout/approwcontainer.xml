<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fiam="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#dee4e7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        fiam:layout_constraintBottom_toBottomOf="parent"
        fiam:layout_constraintStart_toStartOf="parent"
        fiam:layout_constraintTop_toTopOf="parent"
        fiam:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/App_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        fiam:layout_constraintBottom_toTopOf="@+id/App_package_name"
        fiam:layout_constraintEnd_toEndOf="parent"
        fiam:layout_constraintStart_toEndOf="@+id/app_icon"
        fiam:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/App_package_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="ash.appopen.opener"
        android:textStyle="bold"
        fiam:layout_constraintBottom_toBottomOf="parent"
        fiam:layout_constraintEnd_toEndOf="parent"
        fiam:layout_constraintStart_toEndOf="@+id/app_icon"
        fiam:layout_constraintTop_toBottomOf="@+id/App_Name" />
</androidx.constraintlayout.widget.ConstraintLayout>
